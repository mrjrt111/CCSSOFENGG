<script>
    $(document).ready(function(){
        $("button.editOrgButt").click(function(){
            let id = $(this).attr("data-id")
            console.log(id)

            var orgAbb = $("td[data-id='" + id + "'].orgAbb").text()
            var orgName = $("td[data-id='" + id + "'].orgName").text()

            console.log(orgAbb)
            console.log(orgName)

            $("input.editOrgName").val(orgName)
            $("input.editAbb").val(orgAbb)

            $("button.confirmEdit").click(function(){
                console.log("aguy")
                $.ajax({
                url: "/org/editOrg",
                method: "post",
                data: {
                    id:id,
                    orgName: $("input.editOrgName").val(),
                    orgAbb: $("input.editAbb").val()
                },
                success:function(result){
                    if(result.ok === 1){
                    alert("Successfully edited")
                    }else{
                       alert("Something went wrong")
                        }
                    }
                })
            })
        })
    })
</script>


