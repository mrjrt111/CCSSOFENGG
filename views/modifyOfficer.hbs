<script>
    $(document).ready(function(){
        $("button.editButt").click(function(){
            let id = $(this).attr("data-id")
            console.log(id)

            var lName = $("td[data-id='" + id + "'].lName").text()
            var fName = $("td[data-id='" + id + "'].fName").text()
            var eMail = $("td[data-id='" + id + "'].eMail").text()
            var cellNum = $("td[data-id='" + id + "'].cellNum").text()
            console.log(lName)
            console.log(fName)
            console.log(eMail)
            console.log(cellNum)

            $("input.editLast").val(lName)
            $("input.editFirst").val(fName)
            $("input.editEmail").val(eMail)
            $("input.editNum").val(cellNum)

            $("button.confirmEdit").click(function(){
                console.log("aguy")
                $.ajax({
                url: "/user/editUser",
                method: "post",
                data: {
                    id:id,
                    lName: $("input.editLast").val(),
                    fName: $("input.editFirst").val(),
                    eMail: $("input.editEmail").val(),
                    cellNum: $("input.editNum").val()
                },
                success:function(result){
                    if(result.ok === 1){
                    alert("Successfully edited")
                    }else{
                       alert("Something went wrong")
                        }
                    }
                })
            })
        })
    })
</script>

