                                        <tr>
                                            <td><strong>Last Name&nbsp;</strong></td>
                                            <td><strong>Given Name</strong></td>
                                            <td><strong>Email Address&nbsp;</strong></td>
                                            <td><strong>Contact Number</strong></td>
                                            <td><strong>Status</strong></td>
                                            <td><strong></strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
