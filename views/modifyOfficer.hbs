                                            <td data-id="{{_id}}" class="fName">{{givenname}}</td>
                                            <td data-id="{{_id}}" class="eMail">{{email}}</td>
                                            <td data-id="{{_id}}" class="cellNum">{{number}}</td>
                                            <td data-id="{{_id}}">{{type}}</td>
